<div class="jumbotron">
  <h1>Cook Book</h1>
</div>

<div class="row">
  <!-- Add New Recipe -->
  <div class="col-sm-4">
    <div class="row">
      <div class="col">
        <div class="card bg-light">
          <div class="card-body">
            <h1>New Recipe</h1>
            <form action="/create_recipe" method="post">
              <div class="row">
                <div class="col-sm-7">
                  <div class="form-group">
                    <label for="name">Recipe Name: </label>
                    <input id="name" name="name" class="form-control" type="text" required>
                  </div>
                </div>
                <div class="col-sm-5">
                  <div class="form-group">
                    <label for="rating">Rating (1 - 5): </label>
                    <input id="rating" name="rating" class="form-control" type="number" min="1" max="5">
                  </div>
                </div>
              </div>
              <button type="submit" class="btn btn-info">Create Recipe</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
    <!-- End Add Recipe -->

  <div class="col-sm-4">

    <!-- Add New Category -->
    <div class="row">
      <div class="col">
        <div class="card bg-light">
          <div class="card-body">
            <h1>New Category</h1>
            <form action="/create_category" method="post">
              <div class="row">
                <div class="col-sm-7">
                  <div class="form-group">
                    <label for="tag">Category Tag: </label>
                    <input id="tag" name="tag" class="form-control" type="text" required>
                  </div>
                </div>
              </div>
              <button type="submit" class="btn btn-success">Create Category</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <!-- End Add Category -->
  </div>

  <div class="col-sm-4">
  <!-- Add Ingredient -->
    <div class="row">
      <div class="col">
        <div class="card bg-light">
          <div class="card-body">
            <h1>New Ingredient</h1>
            <form action="/add_ingredient" method="post">
              <div class="row">
                <div class="col-sm-7">
                  <div class="form-group">
                    <label for="ingredient">Ingredient:</label>
                    <input id="ingredient" name="ingredient" class="form-control" type="text" required>
                  </div>
                </div>
              </div>
              <button type="submit" class="btn btn-warning">Add Ingredient</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
<!-- End Add Ingredient -->
</div><br><br>

<div class="row">
  <div class="col-sm-12">
    <!-- Hover Effect Table -->
    <% if @recipes.any? %>
      <div class="card bg-light">
        <div class="card-body">
          <table class="table table-hover table-bordered">
            <thead class="thead text-white bg-dark">
              <tr>
                <th>Recipe</th>
                <th>Recipe Rating</th>
                <th>Edit</th>
              </tr>
            </thead>
            <tbody>
              <% @recipes.each do |recipe| %>
                <tr class="table-light">
                  <td class="align-middle"><%= recipe.name %></td>
                  <td class="align-middle"><%= recipe.rating %></td>
                  <td style="text-align: center;">
                    <a href="/recipe/<%= recipe.id %>">
                      <button class="btn btn-info btn-block" type="button">Edit Recipe</button>
                    </a>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% end %>
  </div>
</div><br><br>
<!-- End Table -->

<div class="row">
  <!-- Category Table -->
  <div class="col-sm-6">
    <% if @categories.any? %>
      <div class="card bg-light">
        <div class="card-body">
          <table class="table table-hover table-bordered">
            <thead class="thead text-white bg-dark">
              <tr>
                <th>Category</th>
                <th>View</th>
              </tr>
            </thead>
            <tbody>
              <% @categories.each do |category| %>
                <tr class="table-light">
                  <td class="align-middle"><%= category.tag %></td>
                  <td style="text-align: center;">
                    <a href="/category/<%= category.id %>">
                      <button class="btn btn-success btn-block" type="button">View Recipes in this Tag</button>
                    </a>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% end %>
  </div>
  <!-- End Category Table -->

  <!-- Ingredient Table -->
  <div class="col-sm-6">

      <% if @ingredients.any? %>
        <div class="card bg-light">
          <div class="card-body">
            <!-- Hover Effect Table -->
            <table class="table table-hover table-bordered">
              <thead class="thead text-white bg-dark">
                <tr>
                  <th>Ingredient</th>
                  <th>View</th>
                </tr>
              </thead>
              <tbody>
                <% @ingredients.each do |ingredient| %>
                  <tr class="table-light">
                    <td class="align-middle"><%= ingredient.ingredient %></td>
                    <td style="text-align: center;">
                      <a href="/ingredient/<%= ingredient.id %>">
                        <button class="btn btn-warning btn-block" type="button">View Recipes using this Ingredient</button>
                      </a>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      <% end %>

  </div>
  <!-- End Ingredient Table -->
</div>
