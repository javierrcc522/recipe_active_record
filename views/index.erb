<div class="jumbotron">
  <h1>Cook Book</h1>
</div>

<div class="row">
  <div class="col">
    <% if @recipes.any? %>
      <div class="card bg-light">
        <div class="card-body">
          <!-- Hover Effect Table -->
          <table class="table table-hover table-bordered">
            <thead class="thead text-white bg-dark">
              <tr>
                <th>Recipe</th>
                <th>Recipe Rating</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @recipes.each do |recipe| %>
                <tr class="table-light">
                  <td class="align-middle"><%= recipe.name %></td>
                  <td class="align-middle"><%= recipe.rating %></td>
                  <td style="text-align: center;">
                    <a href="/results/<%= recipe.id %>">
                      <button class="btn btn-warning btn-block" type="button">Edit Recipe</button>
                    </a>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% end %>
  </div>
</div><br><br>
<!-- End Table -->

<!-- Add New Recipe -->
<div class="row">
  <div class="col">
    <div class="card bg-light">
      <div class="card-body">
        <h1>Create a new recipe</h1>
        <form action="/create_recipe" method="post">
          <div class="row">
            <div class="col-sm-9">
              <div class="form-group">
                <label for="name">Recipe Name: </label>
                <input id="name" name="name" class="form-control" type="text" required>
              </div>
            </div>
            <div class="col-sm-3">
              <div class="form-group">
                <label for="rating">Recipe Rating (1 - 10): </label>
                <input id="rating" name="rating" class="form-control" type="number" min="1" max="10">
              </div>
            </div>
          </div>
          <button type="submit" class="btn btn-warning">Create Recipe</button>
        </form>
      </div>
    </div>
  </div>
</div>
<!-- End Add Recipe -->
